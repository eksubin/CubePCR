<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="com.cubepcr.cubepcr.ledControl">



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start"
        android:id="@+id/button2"
        android:layout_below="@+id/extension_temp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp"
        android:background="@color/orange"
        android:onClick="onClick"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Disconnect"
        android:id="@+id/button4"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/orange" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/denat_temp"
        android:layout_marginTop="51dp"
        android:hint="Denat. temp"
        android:textColor="#000000"
        android:layout_toLeftOf="@+id/button2"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/denat_time"
        android:layout_alignTop="@+id/denat_temp"
        android:hint="@string/time"
        android:textColor="#000000"
        android:layout_toLeftOf="@+id/button2"
        android:layout_alignParentRight="true" />

    <EditText
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="5"
        android:id="@+id/anneal_temp"
        android:hint="Anneal. temp"
        android:textColor="#000000"
        android:layout_marginBottom="59dp"
        android:layout_above="@+id/extension_temp"
        android:layout_toLeftOf="@+id/button2"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="5"
        android:id="@+id/anneal_time"
        android:hint="@string/time"
        android:textColor="#000000"
        android:layout_alignTop="@+id/anneal_temp"
        android:layout_alignLeft="@+id/denat_time"
        android:layout_alignRight="@+id/denat_time" />

    <EditText
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="5"
        android:id="@+id/extension_temp"
        android:hint="Ext. temp"
        android:textColor="#000000"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/anneal_temp"
        android:layout_alignRight="@+id/anneal_temp" />

    <EditText
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="5"
        android:id="@+id/extension_time"
        android:layout_alignTop="@+id/extension_temp"
        android:layout_alignLeft="@+id/anneal_time"
        android:hint="@string/time"
        android:textColor="#000000"
        android:layout_alignRight="@+id/anneal_time" />

</RelativeLayout>
