<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="com.cubepcr.cubepcr.About_Page"
    android:background="@color/orange">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Dedicated app for Cube PCR machines.\n\t\t\t\tDeveloped by Subin E K."
    android:textColor="@color/white"
    android:layout_below="@+id/name"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="15dp" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Cube PCR"
    android:textSize="25dp"
    android:id="@+id/name"
    android:textColor="@color/white"
    android:gravity="center_horizontal|center_vertical"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/icon"
    android:layout_marginTop="10dp"/>
    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="@drawable/rubik_cube_clip_art"
        android:id="@+id/icon"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>




